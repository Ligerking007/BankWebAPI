<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankSystem</title>

    <link rel="stylesheet" href="~/bundle/vendor.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <link rel="stylesheet" href="~/bundle/main.min.css" asp-append-version="true" />

    @RenderSection("CustomCss", false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bank System</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    @if (true)//User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav mx-auto text-uppercase">
                            
                            <li class="nav-item dropdown auto-dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button">
                                    Transaction
                                </a>
                                <div class="dropdown-menu">
                                    <a asp-area="" asp-controller="CustomerAccount" asp-action="Deposit" class="dropdown-item">
                                        Deposit
                                    </a>
                                    <a asp-area="" asp-controller="CustomerAccount" asp-action="Withdraw" class="dropdown-item">
                                        Withdraw
                                    </a>
                                    <a asp-area="" asp-controller="CustomerAccount" asp-action="Transfer" class="dropdown-item">
                                        Transfer
                                    </a>
                                </div>
                            </li>


                                <li class="nav-item dropdown auto-dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button">
                                        Customer Account
                                    </a>
                                    <div class="dropdown-menu">
                                        <a asp-area="" asp-controller="CustomerAccount" asp-action="Create" class="dropdown-item">
                                            New Account
                                        </a>
                                        <a asp-area="" asp-controller="CustomerAccount" asp-action="Index" class="dropdown-item">
                                            Account List
                                        </a>
                                       
                                    </div>
                                </li>
                            
                        </ul>

                        <ul class="navbar-nav">
                            <li class="nav-item dropdown auto-dropdown">
                                <a class="nav-link dropdown-toggle" href="#"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <h5 class="dropdown-header">
                                        @*@User.Identity.Name*@
                                        Test
                                    </h5>
                                    <a class="dropdown-item" asp-page="/Account/Settings/Index">Settings</a>
                                    <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                                        <button type="submit" class="btn btn-link text-danger dropdown-item ">Logout</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>



    </header>

    @RenderSection("UnderNavbar", false)

    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/bundle/vendor.min.js" asp-append-version="true"></script>
    <script src="~/bundle/main.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", false)
</body>
</html>
